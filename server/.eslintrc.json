{
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true,
      "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:import/recommended"],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "semi": ["error", "always"], //https://eslint.org/docs/latest/rules/semi#js-toc-label
      "quotes": ["error", "single"], //https://eslint.org/docs/latest/rules/quotes#js-toc-label
  
      // Imports
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
          "allowSeparatedGroups": false
        }
      ] // https://eslint.org/docs/latest/rules/sort-imports#js-toc-label
    }
  }
  